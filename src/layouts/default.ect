<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title><%= (if @title then @title + " | " else "") + @site.title  %></title>
        <meta name="description" content="<%= @site.description %>">
        <meta name="author" content="<%= @site.author %>">
        <meta name="keywords" content="<%= @site.keywords %>">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="apple-touch-icon" href="apple-touch-icon.png">
        <!-- Place favicon.ico in the root directory -->

        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:300,300italic,400,400italic,700,700italic,200,500">
        <link rel="stylesheet" href="<%= @rootPath %>styles/normalize.css">
        <link rel="stylesheet" href="<%= @rootPath %>styles/main.css">
        <link rel="stylesheet" href="<%= @rootPath %>styles/theme.css">
        <script src="js/vendor/modernizr-2.8.3.min.js"></script>
    </head>
    <body>
        <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <!-- Add your site or application content here -->
        <nav>
            <div class="top-bar">
                <div class="row">
                <div class="top-bar-left">
                    <ul class="menu">
                        <!--<li id="brand" class="menu-text">Tony Vashevko</li>-->
                        <li>
                            <a class="brand" href="<%= @rootPath %>">Tony Vashevko</a>
                        </li>
                    </ul>
                </div>
                <div class="top-bar-right">
                    <ul class="menu">
                        <% for doc in @nav: %>
                        <li><a href="<%= @rootPath %><%= doc.link %>"<% if @link is doc.link: %> class="active"<% end %>>
                            <%= doc.title %>
                        </a></li>
                        <% end %>
                    </ul>
                </div>
                </div>
            </div>
        </nav>

        <main>
            <%- @contents %>
        </main>

        <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.12.0.min.js"><\/script>')</script>
        <script src="js/plugins.js"></script>
        <script src="js/main.js"></script>

        <!-- Google Analytics: change UA-XXXXX-X to be your site's ID. -->
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
                ga('create', 'UA-80040334-1', 'auto');
                ga('send', 'pageview');
        </script>
    </body>
</html>
